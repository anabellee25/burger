


<h1>Eat-Da-Burger!</h1>

<main>
  <div class="container" id="secondcontainer">
    <div class="row">
      <div class="col s6">
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
                <button type="submit" class='burgerAvailable'> {{this.burger}}</button>
          
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s6" id="eaten">
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                {{this.burger}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<h2>Add A Burger Option</h2>

<div class="row">
  <div class="col s12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burgername" placeholder="Make it a good burger!">
      <button type="submit" class="addBurgerButton">Add The Burger</button>
    </form>
  </div>
</div>
